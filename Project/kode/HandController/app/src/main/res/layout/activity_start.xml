<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.handcontroller.StartActivity"
    android:background="@drawable/hc_activiy_start_background">

    <Button
        android:id="@+id/SpeechBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginBottom="239dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/hc_activity_start_button1"
        android:text="@string/start_speech_but"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1.55:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45999998" />

    <Button
        android:id="@+id/TranslateBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginBottom="247dp"
        android:layout_marginTop="186dp"
        android:background="@drawable/hc_activity_start_button1"
        android:text="@string/start_translate_but"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ExitBut"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />

    <Button
        android:id="@+id/ManualBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginEnd="261dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/hc_activity_start_button1"
        android:text="@string/start_manual_but"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <Button
        android:id="@+id/ExitBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="123dp"
        android:layout_height="68.88dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/hc_activity_start_button1"
        android:text="@string/start_exit_but"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/HeadText"
        android:layout_width="246dp"
        android:layout_height="80dp"
        android:layout_marginEnd="128dp"
        android:text="@string/startH1"
        android:textAlignment="textStart"
        android:textColor="@color/MainColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/UnderText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UnderText"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_marginBottom="189dp"
        android:text="@string/startH2"
        android:textAlignment="textStart"
        android:textColor="@color/hintColor"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ManualBut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeadText" />


</android.support.constraint.ConstraintLayout>
