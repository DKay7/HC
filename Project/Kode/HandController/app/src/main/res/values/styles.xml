<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/MainColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HC_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorPrimary">@color/MainColor</item>
        <item name="android:statusBarColor">@color/MainColor</item>
        <item name="colorAccent">@color/backgroundColor</item>
    </style>

</resources>
