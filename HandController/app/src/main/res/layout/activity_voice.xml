<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.handcontroller.VoiceActivity"
    android:background="@drawable/hc_activity_voice_background"
    android:id="@+id/lay"
    >

    <TextView
        android:id="@+id/VClick"
        android:layout_width="400dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/voiceH1"
        android:layout_width="315dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="@string/voiceH1"
        android:textColor="@color/backgroundColor"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/voiceTextToTrans"
        android:layout_width="300dp"
        android:layout_height="136dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:hint="@string/voice_hint"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.244" />

    <Button
        android:id="@+id/voiceBut"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:background="@drawable/hc_activity_voice_button1"
        android:gravity="center"
        android:text="@string/speech_but"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/voiceTranslateBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="290dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textToTrans"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/hc_activity_start_button1"
        android:text="@string/start_translate_but"
        android:textAlignment="center"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
